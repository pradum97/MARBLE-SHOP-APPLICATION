                           <children>
                              <Label alignment="CENTER" text="Stock Check" wrapText="true">
                                 <font>
                                    <Font name="Arial Black" size="12.0" />
                                 </font>
                              </Label>
                              <Label fx:id="dailySaleReport" text="10" />
                           </children>
                        </VBox>
                        <ImageView fitHeight="55.0" fitWidth="55.0" pickOnBounds="true" preserveRatio="true">
                           <Image url="@../img/icon/category.png" />
                        </ImageView>
                     </children>
                     <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </padding>
                  </HBox>
                  <HBox alignment="CENTER" layoutX="1304.0" layoutY="60.0" minWidth="200.0" prefHeight="100.0" spacing="10.0" style="-fx-background-color: white; -fx-background-radius: 7;" HBox.hgrow="ALWAYS">
                     <children>
                        <VBox alignment="CENTER" spacing="10.0">
                           <children>
                              <Label alignment="CENTER" text="Total Empoly" wrapText="true">
                                 <font>
                                    <Font name="Arial Black" size="12.0" />
                                 </font>
                              </Label>
                              <Label fx:id="totalEmpoly" text="10" />
                           </children>
                        </VBox>
                        <ImageView fitHeight="55.0" fitWidth="55.0" pickOnBounds="true" preserveRatio="true">
