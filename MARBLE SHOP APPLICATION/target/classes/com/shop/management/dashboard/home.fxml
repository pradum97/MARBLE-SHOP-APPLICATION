<BorderPane xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.shop.management.Controller.Home">
   <center>
      <StackPane BorderPane.alignment="CENTER">
         <children>
            <VBox>
               <children>
                  <HBox alignment="CENTER_RIGHT" spacing="50.0">
                     <children>

                        <HBox alignment="CENTER" spacing="5.0" HBox.hgrow="ALWAYS">
                           <children>

                              <Label text="DAILY SALE REPORT">
