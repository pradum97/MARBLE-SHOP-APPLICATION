                              <TableColumn fx:id="productType" editable="false" prefWidth="100.0" sortable="false" text="TYPE" />
                              <TableColumn fx:id="productCategory" editable="false" prefWidth="100.0" sortable="false" text="CATEGORY" />
                              <TableColumn fx:id="productQuantity" editable="false" prefWidth="90.0" sortable="false" text="QUANTITY" />
                              <TableColumn fx:id="productUnit" editable="false" prefWidth="90.0" sortable="false" text="UNIT" />
                              <TableColumn fx:id="amount" editable="false" prefWidth="90.0" sortable="false" text="AMOUNT" />
