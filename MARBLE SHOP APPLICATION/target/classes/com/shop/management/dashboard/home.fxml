                              <TableColumn fx:id="col_p_date" editable="false" sortable="false" prefWidth="200.0" text="DATE" />
                              <TableColumn fx:id="col_notes" editable="false" sortable="false" prefWidth="200.0" text="Notes" />
                              <TableColumn fx:id="action" editable="false" prefWidth="200.0" sortable="false" text="ACTION" />

                           </columns>
                        </TableView>

                     </children>
                  </HBox>
               </children>
            </VBox>
         </children></StackPane>
   </center>
