         <content>
            <HBox alignment="CENTER" fillHeight="false" spacing="20.0" style="-fx-background-color: #b2afaf;">
               <children>
                  <HBox alignment="CENTER" minWidth="200.0" prefHeight="100.0" spacing="10.0" style="-fx-background-color: white; -fx-background-radius: 7;" HBox.hgrow="ALWAYS">
                     <children>
                        <VBox alignment="CENTER" spacing="10.0">
                           <children>
                              <Label alignment="CENTER" style="-fx-alignment: center;" text="Total Product" wrapText="true">
