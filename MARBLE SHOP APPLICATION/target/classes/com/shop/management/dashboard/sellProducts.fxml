<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.Blend?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane stylesheets="@../css/main.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.shop.management.Controller.SellProduct">
    <center>
        <StackPane BorderPane.alignment="CENTER">
            <children>
                <VBox>
                    <children>

                        <VBox VBox.vgrow="ALWAYS">

                            <children>
                                <TableView cache="true" focusTraversable="false" tableMenuButtonVisible="true" VBox.vgrow="ALWAYS">
                                    <columns>

                                        <TableColumn editable="false" prefWidth="60.0" sortable="false" text="ID" />
                                        <TableColumn editable="false" prefWidth="75.0" sortable="false" text="IMG" />
                                        <TableColumn editable="false" prefWidth="100.0" sortable="false" text="COLOR" />
                                        <TableColumn editable="false" prefWidth="200.0" sortable="false" text="PROD-NAME" />
                                        <TableColumn editable="false" prefWidth="150" sortable="false" text="PURCHASE PRICE" />
                                        <TableColumn editable="false" prefWidth="81" sortable="false" text="PROD-MRP" />
                                        <TableColumn editable="false" prefWidth="85" sortable="false" text="MIN-PRICE" />
                                        <TableColumn editable="false" prefWidth="100.0" sortable="false" text="TYPE" />
                                        <TableColumn editable="false" prefWidth="100.0" sortable="false" text="CATEGORY" />
                                        <TableColumn editable="false" prefWidth="90.0" sortable="false" text="QUANTITY" />
                                        <TableColumn editable="false" prefWidth="90.0" sortable="false" text="UNIT" />
                                        <TableColumn editable="false" prefWidth="100" sortable="false" text="DISCOUNT" />
                                        <TableColumn editable="false" prefWidth="100.0" sortable="false" text="SIZE" />
                                        <TableColumn editable="false" prefWidth="200.0" sortable="false" text="ACTION" />

                                    </columns>
                                </TableView>
                            </children>
                            <VBox.margin>
                                <Insets top="1.0" />
                            </VBox.margin>
                        </VBox>
                    </children>
                </VBox>
            </children>
        </StackPane>
    </center>
   <top>
       <HBox alignment="CENTER" spacing="80.0" style="-fx-background-color: #008080">
           <children>

               <HBox alignment="CENTER" fillHeight="false" spacing="50">

                   <HBox fx:id="refresh_bn" alignment="CENTER" fillHeight="false" onMouseClicked="#refresh_bn" prefHeight="30.0" prefWidth="119.0" style=" -fx-cursor: hand;-fx-background-color: #c41af3;-fx-background-radius: 3;">

                       <ImageView fx:id="refresh_img" fitHeight="15.0" fitWidth="15.0" onMouseClicked="#refresh_bn">
                           <Image url="@../img/icon/refresh_ic.png" />
                       </ImageView>

                       <Button alignment="CENTER" onMouseClicked="#refresh_bn" style="-fx-background-color: transparent" text="REFRESH" textFill="WHITE" />

                       <padding>
                           <Insets left="20.0" right="20.0" />
                       </padding>
                   </HBox>

                   <VBox.margin>
                       <Insets bottom="10.0" top="10.0" />
                   </VBox.margin>

               </HBox>
               <Label style="-fx-border-color: transparent transparent white transparent; -fx-text-fill: white;" text="SELL PRODUCTS" textAlignment="CENTER">
                   <font>
                       <Font name="Agency FB" size="23.0" />
                   </font>
               </Label>

               <HBox alignment="CENTER" spacing="10.0" style="-fx-border-color: transparent transparent white transparent;">
                   <children>
                       <ImageView cache="true" fitHeight="18.0" fitWidth="18.0" pickOnBounds="true" preserveRatio="true">
                           <Image url="@../img/icon/search_icon.png" />
                           <effect>
                               <Blend />
                           </effect>
                       </ImageView>
                       <TextField promptText="FIND PRODUCT.. " style="-fx-background-color: transparent;" />
                   </children>
               </HBox>
           </children>
           <padding>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
           </padding>
       </HBox>
   </top>
</BorderPane>
