<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <TableView focusTraversable="false" tableMenuButtonVisible="true" BorderPane.alignment="CENTER">
        <columns>

            <TableColumn editable="false" prefWidth="60.0" sortable="false" text="ID" />
            <TableColumn editable="false" prefWidth="75.0" sortable="false" text="IMG" />
            <TableColumn editable="false" prefWidth="100.0" sortable="false" text="COLOR" />
            <TableColumn editable="false" prefWidth="200.0" sortable="false" text="PROD-NAME" />
            <TableColumn editable="false" prefWidth="150" sortable="false" text="PURCHASE PRICE" />
            <TableColumn editable="false" prefWidth="81" sortable="false" text="PROD-MRP" />
            <TableColumn editable="false" prefWidth="81" sortable="false" text="MIN-MRP" />
            <TableColumn editable="false" prefWidth="100.0" sortable="false" text="PROD-TYPE" />
            <TableColumn editable="false" prefWidth="100.0" sortable="false" text="CATEGORY" />
            <TableColumn editable="false" prefWidth="90.0" sortable="false" text="QUANTITY" />
            <TableColumn editable="false" prefWidth="90.0" sortable="false" text="UNIT" />
            <TableColumn editable="false" prefWidth="100" sortable="false" text="DISCOUNT" />
            <TableColumn editable="false" prefWidth="100.0" sortable="false" text="SIZE" />
            <TableColumn editable="false" prefWidth="100.0" sortable="false" text="DESCRIPTION" />
            <TableColumn editable="false" prefWidth="200.0" sortable="false" text="ACTION" />

        </columns>
      </TableView>
   </center>
   <top>
      <HBox alignment="CENTER" fillHeight="false" spacing="40.0" style="-fx-background-color: #008080;" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER" spacing="5.0" HBox.hgrow="ALWAYS">
               <children>
                  <Label style="-fx-text-fill: WHITE; -fx-font-weight: BOLD; -fx-font-size: 16;" text="VIEW LIMIT :" />
                  <ComboBox prefWidth="100.0" promptText="30" />
               </children>
            </HBox>
            <TextField alignment="CENTER" prefHeight="35.0" prefWidth="170.0" promptText="Find Product">
               <HBox.margin>
                  <Insets right="30.0" />
               </HBox.margin></TextField>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </top>
</BorderPane>
