<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.shop.management.Controller.AllProducts">
   <center>
      <TableView fx:id="tableView" focusTraversable="false" tableMenuButtonVisible="true" BorderPane.alignment="CENTER">
        <columns>

            <TableColumn fx:id="col_IMG" editable="false" prefWidth="75.0" sortable="false" text="IMG" />
            <TableColumn fx:id="colColor" editable="false" prefWidth="120.0" sortable="false" text="COLOR" />
            <TableColumn fx:id="colProductName" editable="false" prefWidth="200.0" sortable="false" text="PROD-NAME" />
            <TableColumn fx:id="colType" editable="false" prefWidth="110.0" sortable="false" text="PROD-TYPE" />
            <TableColumn fx:id="colCategory" editable="false" prefWidth="120.0" sortable="false" text="CATEGORY" />
            <TableColumn fx:id="colSize" editable="false" maxWidth="-1.0" minWidth="200.0" prefWidth="-1.0" sortable="false" text="SIZE" />

            <TableColumn fx:id="colTax" editable="false" sortable="false" text="TAX" />
            <TableColumn fx:id="colDiscount" editable="false" sortable="false" text="DISCOUNT" />


            <TableColumn fx:id="colDescription" editable="false" prefWidth="150.0" sortable="false" text="DESCRIPTION" />
            <TableColumn fx:id="colAction" editable="false" prefWidth="200.0" sortable="false" text="ACTION" />

        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </center>

   <top>
      <HBox alignment="CENTER" fillHeight="false" spacing="40.0" style="-fx-background-color: #008080;" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER" spacing="5.0" HBox.hgrow="ALWAYS">
               <children>
                  <Label style="-fx-text-fill: WHITE; -fx-font-weight: BOLD; -fx-font-size: 16;" text="VIEW LIMIT :" />
                  <ComboBox prefWidth="100.0" promptText="30" />
               </children>
            </HBox>
            <TextField alignment="CENTER" prefHeight="35.0" prefWidth="170.0" promptText="Find Product">
               <HBox.margin>
                  <Insets right="30.0" />
               </HBox.margin></TextField>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </top>

</BorderPane>
