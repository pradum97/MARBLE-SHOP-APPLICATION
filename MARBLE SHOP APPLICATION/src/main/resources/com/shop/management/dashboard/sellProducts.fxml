<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane stylesheets="@../css/main.css" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.shop.management.Controller.SellProduct">
    <center>
        <StackPane prefHeight="150.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <children>
                <VBox prefHeight="200.0" prefWidth="100.0">
                    <children>
                        <HBox alignment="CENTER" prefHeight="44.0" prefWidth="600.0" spacing="80.0" style="-fx-background-color: #008080">
                            <children>

                                <HBox alignment="CENTER" fillHeight="false" spacing="50">

                                    <HBox fx:id="refresh_bn" alignment="CENTER" fillHeight="false" onMouseClicked="#refresh_bn" prefHeight="30.0" prefWidth="119.0" style=" -fx-cursor: hand;-fx-background-color: #c41af3;-fx-background-radius: 3;">

                                        <ImageView fx:id="refresh_img" fitHeight="15.0" fitWidth="15.0" onMouseClicked="#refresh_bn">
                                            <Image url="@../img/icon/refresh_ic.png" />
                                        </ImageView>

                                        <Button alignment="CENTER" onMouseClicked="#refresh_bn" style="-fx-background-color: transparent" text="REFRESH" textFill="WHITE" />

                                        <padding>
                                            <Insets left="20.0" right="20.0" />
                                        </padding>
                                    </HBox>

                                    <VBox.margin>
                                        <Insets bottom="10.0" top="10.0" />
                                    </VBox.margin>

                                </HBox>
                        <Label style="-fx-border-color: transparent transparent white transparent; -fx-text-fill: white;" text="SELL PRODUCTS" textAlignment="CENTER">
                           <font>
                              <Font name="Agency FB" size="23.0" />
                           </font>
                        </Label>

                                <HBox alignment="CENTER" spacing="10.0" style="-fx-border-color: transparent transparent white transparent;">
                                    <children>
                                        <ImageView cache="true" fitHeight="18.0" fitWidth="18.0" pickOnBounds="true" preserveRatio="true">
                                            <Image url="@../img/icon/search_icon.png" />
                                            <effect>
                                                <Blend />
                                            </effect>
                                        </ImageView>
                                        <TextField promptText="FIND PRODUCT.. " style="-fx-background-color: transparent;" />
                                    </children>
                                </HBox>
                            </children>
                            <padding>
                                <Insets bottom="5.0" />
                            </padding>
                        </HBox>
                        <VBox prefHeight="200.0" prefWidth="100.0" VBox.vgrow="ALWAYS">

                            <children>
                                <TableView cache="true" tableMenuButtonVisible="true" VBox.vgrow="ALWAYS">
                                    <columns>

                                        <TableColumn editable="false" prefWidth="60.0" sortable="false" text="ID" />
                                        <TableColumn editable="false" prefWidth="75.0" sortable="false" text="IMG" />
                                        <TableColumn editable="false" prefWidth="100.0" sortable="false" text="COLOR" />
                                        <TableColumn prefWidth="200.0" text="PROD-NAME" />
                                        <TableColumn prefWidth="150" text="PURCHASE PRICE" />
                                        <TableColumn prefWidth="81" text="PROD-MRP" />
                                        <TableColumn prefWidth="85" text="MIN-PRICE" />
                                        <TableColumn prefWidth="100.0" text="TYPE" />
                                        <TableColumn prefWidth="100.0" text="CATEGORY" />
                                        <TableColumn prefWidth="90.0" text="QUANTITY" />
                                        <TableColumn prefWidth="90.0" text="UNIT" />
                                        <TableColumn prefWidth="100" text="DISCOUNT" />
                                        <TableColumn prefWidth="100.0" text="SIZE" />
                                        <TableColumn prefWidth="200.0" text="ACTION" />

                                    </columns>
                                </TableView>
                            </children>
                            <VBox.margin>
                                <Insets top="1.0" />
                            </VBox.margin>
                        </VBox>
                    </children>
                </VBox>
            </children>
        </StackPane>
    </center>
</BorderPane>
