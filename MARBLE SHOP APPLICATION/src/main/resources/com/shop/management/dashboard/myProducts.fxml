<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <TableView tableMenuButtonVisible="true" BorderPane.alignment="CENTER">
        <columns>

            <TableColumn prefWidth="60.0" text="ID" />
            <TableColumn prefWidth="75.0" text="IMG" />
            <TableColumn prefWidth="100.0" text="COLOR" />
            <TableColumn prefWidth="200.0" text="PROD-NAME" />
            <TableColumn prefWidth="150" text="PURCHASE PRICE" />
            <TableColumn prefWidth="81" text="PROD-MRP" />
            <TableColumn prefWidth="81" text="MIN-MRP" />
            <TableColumn prefWidth="100.0" text="PROD-TYPE" />
            <TableColumn prefWidth="100.0" text="CATEGORY" />
            <TableColumn prefWidth="90.0" text="QUANTITY" />
            <TableColumn prefWidth="90.0" text="UNIT" />
            <TableColumn prefWidth="100" text="DISCOUNT" />
            <TableColumn prefWidth="100.0" text="SIZE" />
            <TableColumn prefWidth="100.0" text="DESCRIPTION"/>
            <TableColumn prefWidth="200.0" text="ACTION" />

        </columns>
      </TableView>
   </center>
   <top>
      <HBox alignment="CENTER" prefHeight="55.0" prefWidth="600.0" spacing="40.0" style="-fx-background-color: #008080;" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="5.0" HBox.hgrow="ALWAYS">
               <children>
                  <Label style="-fx-text-fill: WHITE; -fx-font-weight: BOLD; -fx-font-size: 16;" text="VIEW LIMIT :" />
                  <ComboBox prefWidth="100.0" promptText="30" />
               </children>
            </HBox>
            <TextField alignment="CENTER" prefWidth="170.0" promptText="Find Product" />
         </children>
         <padding>
            <Insets right="30.0" />
         </padding>
      </HBox>
   </top>
</BorderPane>
