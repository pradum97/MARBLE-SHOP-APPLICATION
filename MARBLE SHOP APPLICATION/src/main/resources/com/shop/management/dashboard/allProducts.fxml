<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.shop.management.Controller.AllProducts">
   <center>
      <TableView fx:id="tableView" focusTraversable="false" tableMenuButtonVisible="true" BorderPane.alignment="CENTER">
        <columns>

            <TableColumn fx:id="col_IMG" editable="false" prefWidth="75.0" sortable="false" text="IMG" />
            <TableColumn fx:id="colColor" editable="false" prefWidth="120.0" sortable="false" text="COLOR" />
            <TableColumn fx:id="colProductName" editable="false" prefWidth="200.0" sortable="false" text="PROD-NAME" />
            <TableColumn fx:id="colType" editable="false" prefWidth="110.0" sortable="false" text="PROD-TYPE" />
            <TableColumn fx:id="colCategory" editable="false" prefWidth="120.0" sortable="false" text="CATEGORY" />
            <TableColumn fx:id="colDiscount" editable="false" prefWidth="100" sortable="false" text="DISCOUNT" />
            <TableColumn fx:id="colTax" editable="false" prefWidth="100" sortable="false" text="TAX" />


            <TableColumn fx:id="colSize" editable="false" prefWidth="100.0" sortable="false" text="SIZE" />
            <TableColumn fx:id="colPurchasePrice" editable="false" prefWidth="150" sortable="false" text="PURCHASE PRICE" />
            <TableColumn fx:id="colMrp" editable="false" prefWidth="100.0" sortable="false" text="PROD-MRP" />
            <TableColumn fx:id="colMinSellPrice" editable="false" prefWidth="100.0" sortable="false" text="MIN-SELL" />
            <TableColumn fx:id="colQuantity" editable="false" prefWidth="100.0" sortable="false" text="QUANTITY" />
            <TableColumn fx:id="colQuantityUnit" editable="false" prefWidth="100.0" sortable="false" text="UNIT" />
            <TableColumn fx:id="colDescription" editable="false" prefWidth="150.0" sortable="false" text="DESCRIPTION" />
            <TableColumn fx:id="colProduct" editable="false" prefWidth="200.0" sortable="false" text="ACTION" />

        </columns>
      </TableView>
   </center>

   <top>
      <HBox alignment="CENTER" fillHeight="false" spacing="40.0" style="-fx-background-color: #008080;" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER" spacing="5.0" HBox.hgrow="ALWAYS">
               <children>
                  <Label style="-fx-text-fill: WHITE; -fx-font-weight: BOLD; -fx-font-size: 16;" text="VIEW LIMIT :" />
                  <ComboBox prefWidth="100.0" promptText="30" />
               </children>
            </HBox>
            <TextField alignment="CENTER" prefHeight="35.0" prefWidth="170.0" promptText="Find Product">
               <HBox.margin>
                  <Insets right="30.0" />
               </HBox.margin></TextField>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </top>

</BorderPane>
