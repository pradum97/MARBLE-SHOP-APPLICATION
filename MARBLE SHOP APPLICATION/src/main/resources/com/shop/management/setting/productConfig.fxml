<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane style="-fx-background-color: gray;" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.shop.management.Controller.SettingController.ProductConfig">
    <padding>
        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
    </padding>
    <children>
      <VBox alignment="CENTER" layoutX="15.0" layoutY="15.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <Label text="PRODUCT CONFIG" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Label>
            <Separator maxWidth="200.0" prefWidth="200.0" />
            <ScrollPane fitToHeight="true" fitToWidth="true" VBox.vgrow="ALWAYS">
               <content>
                    <VBox alignment="TOP_CENTER" spacing="20">
                        <children>
                            <HBox alignment="TOP_CENTER" style="-fx-background-color: white;                             -fx-background-radius: 10;">
                                <children>
                                    <VBox alignment="TOP_CENTER" fillWidth="false" HBox.hgrow="ALWAYS">
                                        <children>
                                            <Label style="-fx-font-size: 14;" text="GST Configuration" textAlignment="CENTER">
                                                <VBox.margin>
                                                    <Insets bottom="5.0" top="5.0" />
                                                </VBox.margin>
                                            </Label>
                                            <Separator prefWidth="200.0">
                                       <VBox.margin>
                                          <Insets bottom="15.0" />
                                       </VBox.margin>
                                    </Separator>
                                            <HBox alignment="CENTER_LEFT" spacing="10.0" VBox.vgrow="ALWAYS">
                                                <children>
                                                    <VBox prefHeight="0.0" spacing="15.0">
                                                        <children>
                                                <HBox alignment="CENTER_RIGHT">
                                                   <children>
                                                      <Button alignment="CENTER_RIGHT" mnemonicParsing="false" onAction="#addGST" style="-fx-background-color: #008080; -fx-text-fill: WHITE; -fx-cursor: hand;" text="➕ ADD OTHER GST" />
                                                   </children>
                                                </HBox>
                                                            <TableView fx:id="tableViewGst" maxHeight="200.0">
                                                                <columns>
                                                                    <TableColumn fx:id="colSGST" editable="false" minWidth="60.0" prefWidth="60.0" sortable="false" text="SGST" />
                                                                    <TableColumn fx:id="colCGST" editable="false" minWidth="60.0" prefWidth="60.0" sortable="false" text="CGST" />
                                                                    <TableColumn fx:id="colIGST" editable="false" minWidth="60.0" prefWidth="60.0" sortable="false" text="IGST" />
                                                                    <TableColumn fx:id="colGstName" editable="false" minWidth="180.0" prefWidth="200.0" sortable="false" text="GST NAME" />
                                                      <TableColumn fx:id="colDes" editable="false" minWidth="180.0" prefWidth="200.0" sortable="false" text="DESCRIPTION" />
            
                                                                    <TableColumn fx:id="colAction" editable="false" minWidth="80.0" prefWidth="90.0" sortable="false" text="ACTION" />
                                                                </columns>
                                                                <columnResizePolicy>
                                                                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                                                </columnResizePolicy>
                                                            </TableView>
                                                        </children>
                                                    </VBox>
                                                </children>
                                            </HBox>
                                        </children>
                                        <padding>
                                            <Insets bottom="10.0" left="10.0" right="10.0" />
                                        </padding>
                                    </VBox>
                                </children>
                           <padding>
                              <Insets bottom="10.0" />
                           </padding>
                            </HBox>
            
            
                            <HBox alignment="TOP_CENTER" style="-fx-background-color: white;                  -fx-background-radius: 10;">
                                <children>
                                    <VBox alignment="TOP_CENTER" fillWidth="false" HBox.hgrow="ALWAYS">
                                        <children>
                                            <Label style="-fx-font-size: 14;" text="DISCOUNT" textAlignment="CENTER">
                                                <VBox.margin>
                                                    <Insets bottom="5.0" top="5.0" />
                                                </VBox.margin>
                                            </Label>
                                            <Separator prefWidth="200.0">
                                                <VBox.margin>
                                                    <Insets bottom="15.0" />
                                                </VBox.margin>
                                            </Separator>
                                            <HBox alignment="CENTER" fillHeight="false" spacing="10.0" VBox.vgrow="ALWAYS">
                                                <children>
                                                    <VBox alignment="CENTER" spacing="15.0" HBox.hgrow="ALWAYS">
                                                        <children>
                                                <HBox alignment="CENTER_RIGHT">
                                                   <children>
                                                      <Button alignment="CENTER_RIGHT" mnemonicParsing="false" onAction="#addDiscountBN" style="-fx-background-color: #008080; -fx-text-fill: WHITE; -fx-cursor: hand;" text="➕ ADD DISCOUNT" HBox.hgrow="ALWAYS">
                                                         <HBox.margin>
                                                            <Insets />
                                                         </HBox.margin>
                                                      </Button>
                                                   </children>
                                                </HBox>
                                                            <TableView fx:id="tableViewDiscount" maxHeight="200.0" prefHeight="0.0">
                                                                <columns>
                                                                    <TableColumn fx:id="colDiscount" editable="false" minWidth="60.0" prefWidth="100.0" sortable="false" text="DISCOUNT" />
            
                                                                    <TableColumn fx:id="colDiscountType" editable="false" minWidth="60.0" prefWidth="130.0" sortable="false" text="DISCOUNT TYPE" />
                                                      <TableColumn fx:id="colDiscountDes" editable="false" minWidth="60.0" prefWidth="150.0" sortable="false" text="DESCRIPTION" />
            
            
            
                                                                    <TableColumn fx:id="colDisAction" editable="false" minWidth="80.0" prefWidth="120.0" sortable="false" text="ACTION" />
                                                                </columns>
                                                                <columnResizePolicy>
                                                                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                                                </columnResizePolicy>
                                                            </TableView>
                                                        </children>
                                                    </VBox>
                                                </children>
                                            </HBox>
                                        </children>
                                        <padding>
                                            <Insets bottom="10.0" left="10.0" right="10.0" />
                                        </padding>
                                    </VBox>
                                </children>
                                <padding>
                                    <Insets bottom="10.0" />
                                </padding>
                            </HBox>
            
            
                        </children>
                    </VBox>
               </content>
            </ScrollPane>
         </children>
      </VBox>
    </children>
</AnchorPane>
